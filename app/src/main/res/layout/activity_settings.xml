<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground"
    tools:context="net.cashadmin.cashadmin.Activities.Activities.SettingsActivity">


    <TextView
        android:id="@+id/titleCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:text="@string/cycles"
        android:textColor="@color/primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/whicheRecurrenceLayout"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_below="@id/titleCycle"
        android:layout_margin="8dp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:text="@string/each"
            android:textColor="@color/Black"
            android:textSize="16dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:spinnerMode="dropdown">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daysLayout"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_below="@id/whicheRecurrenceLayout"
        android:layout_margin="8dp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/each"
            android:textColor="@color/Black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/pickerDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_weight="0.1"
            android:text="@string/monday"
            android:clickable="true"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/monthsLayout"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_below="@id/whicheRecurrenceLayout"
        android:layout_margin="8dp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/whichDay"
            android:textColor="@color/Black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/pickerDayInMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="1"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginRight="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yearsLayout"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_below="@id/whicheRecurrenceLayout"
        android:layout_margin="8dp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/whichDay"
            android:textColor="@color/Black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/pickerYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="1  janvier"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginRight="4dp"/>
    </LinearLayout>


</RelativeLayout>
